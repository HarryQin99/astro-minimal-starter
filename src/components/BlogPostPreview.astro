---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<article class="post-preview">
    <a href={post.url}>
    <h1 class="title">{post.title}</h1>
    <time class="publish-date">{post.publishDate}</time>
    </a>
</article>

<style>
  a {
    text-decoration: none;
  }

  a:hover > .title {
    text-decoration: underline;
  }

.title,
.author,
.publish-date {
  margin: 0;
}

.publish-date,
.author {
  font-size: 0.75rem;
  color: grey;
}

.title {
  font-size: 1rem;
  font-weight: 700;
  color: black;
}

</style>
